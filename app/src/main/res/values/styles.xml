<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="toolbarStyle">@style/myToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
        <!--<item name="android:windowAnimationStyle">@style/AnimFade</item>-->
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@android:color/black</item>-->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--
             Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used.
        -->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation</item>-->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!--<item name="android:windowBackground">@drawable/logo_splash</item>-->
        <item name="android:windowNoTitle">true</item> <!-- 设置无标题 -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>

    <style name="TopicTitleTheme">
        <item name="android:textSize">@dimen/topicTextsize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/kk_activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/kk_activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/kk_activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/kk_activity_close_exit</item>
        <item name="android:taskOpenEnterAnimation">@anim/kk_activity_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/kk_activity_open_exit</item>
        <item name="android:taskCloseEnterAnimation">@anim/kk_activity_close_enter</item>
        <item name="android:taskCloseExitAnimation">@anim/kk_activity_close_exit</item>
        <item name="android:taskToFrontEnterAnimation">@anim/kk_activity_open_enter</item>
        <item name="android:taskToFrontExitAnimation">@anim/kk_activity_open_exit</item>
        <item name="android:taskToBackEnterAnimation">@anim/kk_activity_close_enter</item>
        <item name="android:taskToBackExitAnimation">@anim/kk_activity_close_exit</item>
    </style>

    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Theme.UMDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.UMDefault" parent="android:style/Theme.NoTitleBar"></style>

    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@android:color/black</item> <!--  敲定颜色-->
        <item name="android:textSize">15sp</item> <!--  搞掂字体大小-->
        <item name="android:textStyle">normal</item>
    </style>
    <!-- 分割线 灰色ECECEC -->
    <style name="under_line_ececec">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_EC</item>
    </style>
    <!-- 分割线 灰色ECECEC -->
    <style name="menu_style">
        <item name="android:layout_width">160px</item>
        <item name="android:layout_height">160px</item>
    </style>
    <!--新闻字体样式 -->
    <style name="news_text">
        <item name="android:textSize">@dimen/pic_9</item>
        <item name="android:textColor">@color/index_news_color2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>
    <!--新闻标题字体样式 -->
    <style name="news_text_title">
        <item name="android:textSize">@dimen/pic_7</item>
        <item name="android:textColor">@color/index_news_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    <!--新闻标题字体样式 -->
    <style name="news_pics">
        <item name="android:scaleType">fitXY</item>
        <item name="android:visibility">visible</item>
    </style>
    <!--登陆注册输入框样式 -->
    <style name="mine_ed_style">
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/black_3</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:background">@null</item>
    </style>
    <!--button样式 -->
    <style name="button_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bt_text_size</item>
        <item name="android:layout_width">@dimen/bt_width</item>
        <item name="android:layout_height">@dimen/bt_height</item>
    </style>
    <!--完善资料字体样式 -->
    <style name="OrganizingData_text_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/gray_99</item>
        <item name="android:textSize">@dimen/px_48</item>
    </style>

    <!--横向进度条-->
    <style name="mProgress_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <!--<item name="android:progressDrawable">@drawable/mprogress_horizontal</item>-->
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


    <style name="DialogButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/btn_dialog</item>
        <item name="android:minHeight">45.0dip</item>
    </style>

    <style name="DialogButton.Left" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_left</item>
    </style>

    <style name="DialogButton.Right" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_right</item>
    </style>

    <style name="DialogButton.Center" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_center</item>
    </style>

    <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="DialogTitle" parent="@style/ShadowedText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ShadowedText">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>


    <style name="style_topbar_textview_shadow">
        <item name="android:shadowColor">#bf000000</item>
        <item name="android:shadowDy">-2.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="app_grid_item_name_font">
        <item name="android:textSize">12.0dip</item>
    </style>


    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />
    <!--<style name="ItemStyle">-->
    <!--<item name="android:layout_width">match_parent</item>-->
    <!--<item name="android:layout_height">wrap_content</item>-->
    <!--<item name="android:padding">10dip</item>-->
    <!--<item name="android:textSize">@dimen/sp_16</item>-->
    <!--<item name="android:background">@android:color/transparent</item>-->
    <!--<item name="android:drawableRight">@android:drawable/ic_menu_edit</item>-->
    <!--<item name="android:gravity">top</item>-->
    <!--</style>-->
    <!-- 去除dialog边框 底部弹出菜单 -->
    <style name="pop_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
    </style>

    <style name="dialog_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="popupwindow_fade" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="SampleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="numberPickerStyle">@style/NPWidget.Holo.NumberPicker</item>
        <!--<item name="android:windowBackground">@android:color/black</item>-->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

        <!--
             Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used.
        -->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation</item>-->
    </style>
</resources>
