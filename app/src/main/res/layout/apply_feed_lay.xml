<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/five_bg"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0px">

        <com.icebroken.widget.MyToolbar
            android:id="@+id/myToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_collapseMode="pin">


        </com.icebroken.widget.MyToolbar>
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray_L" />

    <EditText
        android:background="@color/white"
        android:layout_margin="36px"
        android:id="@+id/ed_apply"
        style="@style/mine_ed_style"
        android:gravity="top"
        android:padding="25px"
        android:layout_width="match_parent"
        android:layout_height="775px"
        android:layout_centerVertical="true"
        android:hint="请输入您的反馈意见"
        android:maxLength="20"/>
        <Button
            android:id="@+id/bt_sure"
            style="@style/button_style"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450px"
            android:fitsSystemWindows="true"
            android:padding="0dp"
            android:background="#3676fc"
            android:text="提交" />


</LinearLayout>
