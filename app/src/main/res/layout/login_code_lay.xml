<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0px">

        <com.icebroken.widget.MyToolbar
            android:id="@+id/myToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_collapseMode="pin"></com.icebroken.widget.MyToolbar>
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray_L" />

    <RelativeLayout
        android:layout_width="@dimen/dp_225"
        android:layout_height="@dimen/dp_218"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/login_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="@dimen/dp_5"
            android:text="遍绿野，嬉游醉眠，莫负青春。"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_200"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/pwd_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机验证码"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <com.tuo.customview.VerificationCodeView
                    android:id="@+id/icv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icv_et_number="4"
                    app:icv_et_text_size="18sp"
                    app:icv_et_width="@dimen/dp_35" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_40"
                android:gravity="center_horizontal"
                android:text="短信验证码不正确"
                android:textColor="#ffcc545f"
                android:textSize="12sp"
                android:visibility="invisible" />


        </LinearLayout>

        <TextView
            android:id="@+id/bt_login"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_46"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_25"
        android:text="注册即同意 用户协议 与 隐私政策"
        android:textColor="#ff999999"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
