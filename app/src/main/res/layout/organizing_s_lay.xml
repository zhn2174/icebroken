<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/topview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0px">

            <com.icebroken.widget.MyToolbar
                android:id="@+id/myToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:layout_collapseMode="pin">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="完善个人信息（2/2）"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </com.icebroken.widget.MyToolbar>


        </android.support.design.widget.AppBarLayout>


        <RelativeLayout
            android:id="@+id/school_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="所在学校"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/school_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/icon_arrow"
                android:drawablePadding="@dimen/dp_5"
                android:hint="请选择"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/gray_E4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="院系"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/school_ed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_77"
                android:background="@color/white"
                android:gravity="center_vertical|right"
                android:hint="请填写院系"
                android:drawableRight="@mipmap/icon_arrow"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/gray_E4" />

        <RelativeLayout
            android:id="@+id/start_school_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="入学年"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/start_school_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/icon_arrow"
                android:drawablePadding="@dimen/dp_5"
                android:hint="请选择"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/gray_E4" />

        <RelativeLayout
            android:id="@+id/identity_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="身份"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/identity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/icon_arrow"
                android:drawablePadding="@dimen/dp_5"
                android:hint="请选择"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/gray_E4" />

        <RelativeLayout
            android:id="@+id/student_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="学生认证"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/student_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/icon_arrow"
                android:drawablePadding="@dimen/dp_5"
                android:text="去认证"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/gray_E4" />

        <RelativeLayout
            android:id="@+id/talk_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="允许其他用户直接聊天"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:textSize="@dimen/sp_16" />

            <CheckBox
                android:id="@+id/talk_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/check_bg"
                android:button="@null"
                android:checked="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/gray_E4" />


    </LinearLayout>

    <TextView
        android:id="@+id/bt_login"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_23"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />
</RelativeLayout>