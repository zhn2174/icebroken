<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/px_60"
        android:layout_marginRight="@dimen/px_60"
        fab:menu_backgroundColor="@color/transparent"
        fab:menu_colorNormal="@color/blue_d"
        fab:menu_colorPressed="@color/blue_d"
        fab:menu_colorRipple="@color/blue_d"
        fab:menu_icon="@mipmap/add_b"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_labels_textSize="28px">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xontent_t1"
            fab:backgroundTint="@color/transparent"
            fab:fab_colorNormal="@color/transparent"
            fab:fab_colorPressed="@color/transparent"
            fab:fab_size="mini"
             />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/content_t2"
            fab:backgroundTint="@color/transparent"
            fab:fab_colorNormal="@color/transparent"
            fab:fab_size="mini"
            fab:fab_colorPressed="@color/transparent" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/content_t3"
            fab:fab_size="mini"
            fab:backgroundTint="@color/transparent"
            fab:fab_colorNormal="@color/transparent"
            fab:fab_colorPressed="@color/transparent" />

    </com.github.clans.fab.FloatingActionMenu>
</LinearLayout>
