<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="475px">
    <View
        android:background="#3676FC"
        android:layout_width="match_parent"
        android:layout_height="210px"/>
    <android.support.v7.widget.CardView
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="460px">
            <!--头像-->
            <ImageView
                android:id="@+id/image_user"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_marginTop="58px"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/thread_magin_LR"
                android:layout_marginRight="@dimen/thread_magin_LR"
                android:scaleType="fitXY"
                android:src="@drawable/toux2" />
            <TextView
                android:id="@+id/user_name"
                android:layout_marginTop="270px"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="58px"
                android:text="高薇薇"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_jop"
                android:layout_marginTop="355px"
                android:textColor="@color/gray"
                android:textSize="45px"
                android:text="职称：人事部主管"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="15px"
        android:id="@+id/layout_code"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon1"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="55px"
            android:layout_centerVertical="true"
            android:background="@mipmap/me_icon1" />


        <TextView
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/icon1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的二维码"
            android:layout_gravity="center"
            android:textColor="@color/gray_4C"
            android:textSize="48px" />
        <View
            android:layout_marginRight="48px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="21px"
            android:layout_height="36px"
            android:background="@mipmap/right_h"
            />
    </RelativeLayout>
    <View
        android:layout_marginLeft="55px"
        android:layout_marginRight="48px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_E6"/>
    <RelativeLayout
        android:id="@+id/layout_work"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon2"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="55px"
            android:layout_centerVertical="true"
            android:background="@mipmap/me_icon2" />


        <TextView
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/icon2"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的任务"
            android:layout_gravity="center"
            android:textColor="@color/gray_4C"
            android:textSize="48px" />
        <View
            android:layout_marginRight="48px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="21px"
            android:layout_height="36px"
            android:background="@mipmap/right_h"
            />
    </RelativeLayout>
    <View
        android:layout_marginLeft="55px"
        android:layout_marginRight="48px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_E6"/>
    <RelativeLayout
        android:id="@+id/layout_help"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon3"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="55px"
            android:layout_centerVertical="true"
            android:background="@mipmap/me_icon3" />


        <TextView
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/icon3"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助手册"
            android:layout_gravity="center"
            android:textColor="@color/gray_4C"
            android:textSize="48px" />
        <View
            android:layout_marginRight="48px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="21px"
            android:layout_height="36px"
            android:background="@mipmap/right_h"
            />
    </RelativeLayout>
    <View
        android:layout_marginLeft="55px"
        android:layout_marginRight="48px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_E6"/>
    <RelativeLayout
        android:id="@+id/layout_setting"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon4"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="55px"
            android:layout_centerVertical="true"
            android:background="@mipmap/me_icon4" />


        <TextView
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/icon4"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:layout_gravity="center"
            android:textColor="@color/gray_4C"
            android:textSize="48px" />
        <View
            android:layout_marginRight="48px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="21px"
            android:layout_height="36px"
            android:background="@mipmap/right_h"
            />
    </RelativeLayout>
    <View
        android:layout_marginLeft="55px"
        android:layout_marginRight="48px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_E6"/>
    </LinearLayout>
</LinearLayout>