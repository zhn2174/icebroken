<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0px">

        <com.icebroken.widget.MyToolbar
            android:id="@+id/myToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_collapseMode="pin">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发文拟稿"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </com.icebroken.widget.MyToolbar>
    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="@color/gray_E6" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="发文标题"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/send_title"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"
                    android:hint="请填写文件标题(必填)"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="@color/gray_E6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="主题词"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/send_main_title"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"
                    android:hint="请完善主题词(必填)"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/five_bg" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="145px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="内容描述"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

            </RelativeLayout>

            <EditText
                android:id="@+id/meet_title"
                android:layout_width="match_parent"
                android:layout_height="210px"
                android:layout_marginLeft="@dimen/px_60"
                android:background="@color/white"
                android:drawablePadding="20px"
                android:gravity="top"
                android:hint="请简单的描述发文内容"
                android:textColor="@color/gray_4C"
                android:textSize="@dimen/px_48" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/five_bg" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="主送"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:id="@+id/main_to"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"
                    android:hint="请填写主送(必填)"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="抄送"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:id="@+id/two_to"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"
                    android:hint="请填写抄送"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="抄报"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:id="@+id/two_to1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"

                    android:hint="请填写抄报"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="拟稿人"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:id="@+id/send_porson"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"

                    android:hint="请填写拟稿人"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="核稿"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:id="@+id/send_porson1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"

                    android:hint="请填写核稿"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="局室负责人"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:id="@+id/send_porson2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"

                    android:hint="请填写局室负责人"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/five_bg" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="文件类别"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <TextView
                    android:id="@+id/select_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"

                    android:hint="请选择文件类别"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="20px"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="发文编号"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:id="@+id/send_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"

                    android:hint="请输入发文编号"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="印发份数"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:id="@+id/send_mun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"

                    android:hint="请填写印发份数"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="签收人"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <EditText
                    android:id="@+id/reperson"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"

                    android:hint="请填写签收人"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <RelativeLayout
                android:id="@+id/select_send_time"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="发文日期"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <TextView
                    android:id="@+id/send_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="250px"
                    android:background="@color/white"
                    android:drawablePadding="20px"

                    android:hint="请选择发文日期"
                    android:inputType="number"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="20px"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:textColor="@color/gray_4C"
                    android:textSize="@dimen/px_48" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="60px"
                android:background="@color/gray_L" />

            <TextView
                android:id="@+id/post_file"
                android:layout_width="match_parent"
                android:layout_height="145px"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="90px"
                android:layout_marginRight="90px"
                android:layout_marginTop="30px"
                android:background="@drawable/black_btn_bg"
                android:gravity="center"
                android:text="点击上传附件"
                android:textColor="@color/gray"
                android:textSize="@dimen/px_48" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/five_bg" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_L" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_F8">

                <TextView
                    android:id="@+id/btnExit"
                    android:layout_width="match_parent"
                    android:layout_height="145px"
                    android:layout_margin="@dimen/px_60"
                    android:background="#3676fc"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_48" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>