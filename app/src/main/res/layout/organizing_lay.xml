<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/topview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0px">

                <com.icebroken.widget.MyToolbar
                    android:id="@+id/myToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:layout_collapseMode="pin">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="完善个人信息（1/2）"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                </com.icebroken.widget.MyToolbar>

            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20">

                <RelativeLayout
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/iv_user"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:src="@mipmap/icon_head" />

                    <ImageView
                        android:id="@+id/iv_choose"
                        android:layout_width="@dimen/dp_29"
                        android:layout_height="@dimen/dp_29"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/icon_cam" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginRight="@dimen/dp_31">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="昵称"
                    android:textColor="@color/umeng_socialize_list_item_textcolor"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_38"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_77"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginRight="@dimen/dp_31"
                android:background="@color/gray_E4" />

            <RelativeLayout
                android:id="@+id/birthday_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginRight="@dimen/dp_31">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="生日"
                    android:textColor="@color/umeng_socialize_list_item_textcolor"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/birthday_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="请选择"
                    android:textColor="@color/umeng_socialize_text_time"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginRight="@dimen/dp_31"
                android:background="@color/gray_E4" />

            <RelativeLayout
                android:id="@+id/home_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginRight="@dimen/dp_31">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="家乡"
                    android:textColor="@color/umeng_socialize_list_item_textcolor"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="请选择"
                    android:textColor="@color/umeng_socialize_text_time"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginRight="@dimen/dp_31"
                android:background="@color/gray_E4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_31"
                android:layout_marginBottom="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/umeng_socialize_list_item_textcolor"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="（设置后无法更改）"
                    android:textColor="@color/umeng_socialize_text_time"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/sex_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/woman"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_35"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/radio_bg"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="女"
                    android:textColor="@drawable/multiselect_text_colors"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/man"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_35"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/radio_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="@drawable/multiselect_text_colors"
                    android:textSize="14sp" />


            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginRight="@dimen/dp_31"
                android:layout_marginBottom="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="情感状态"
                    android:textColor="@color/umeng_socialize_list_item_textcolor"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/love_state_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginBottom="20dp"
                android:drawablePadding="20px"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/single"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_35"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/radio_bg"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="单身"
                    android:textColor="@drawable/multiselect_text_colors"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/love"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_35"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/radio_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="恋爱中"
                    android:textColor="@drawable/multiselect_text_colors"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/secrecy"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_35"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/radio_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="保密"
                    android:textColor="@drawable/multiselect_text_colors"
                    android:textSize="14sp" />
            </RadioGroup>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/bt_login"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_23"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />
</LinearLayout>