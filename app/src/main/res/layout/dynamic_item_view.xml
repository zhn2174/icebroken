<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/dynamic_head_iv"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/dynamic_sex_iv"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dynamic_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="三捣"
                android:textColor="@color/black_3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dynamic_school_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="南京大学"
                android:textColor="#ff999999"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dynamic_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="刚刚"
            android:textColor="#ff999999"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dynamic_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/dynamic_pic_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.icebroken.widget.RectImageView
            android:id="@+id/dynamic_pic1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.icebroken.widget.RectImageView
            android:id="@+id/dynamic_pic2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <com.icebroken.widget.RectImageView
            android:id="@+id/dynamic_pic3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerSimple
        android:id="@+id/dynamic_video_player"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/praise_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="点赞"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评论"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/share_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="分享"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/more_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="..."
                android:textColor="#ff666666"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>