<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/match_league_roung_item_ll"
        android:layout_width="50dip"
        android:layout_height="80dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/five_mounth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="周一"
            android:textColor="@color/five_item_title_1"
            android:textSize="12dp" />
        <LinearLayout
            android:id="@+id/five_num_lay"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/five_num"
                android:background="@drawable/five_item_bg_select"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="5" />
            <View
                android:visibility="gone"
                android:id="@+id/five_view"
                android:layout_width="20dp"
                android:background="@color/black"
                android:layout_height="1dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>