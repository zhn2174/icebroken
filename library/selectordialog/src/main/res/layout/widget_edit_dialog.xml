<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_corner4"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/edit_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="打卡备注"
        android:textStyle="bold"
        android:textColor="@color/black_light"
        android:textSize="23dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dp"
        android:background="@color/black_light"
        />

    <LinearLayout
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="122dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="15dp"
                android:layout_marginTop="19dp"
                android:textSize="18dp"
                android:text="打卡时间："
                android:textColor="#bfbfbf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/time"
                android:paddingLeft="7dp"
                android:layout_marginTop="19dp"
                android:textSize="18dp"
                android:text="12:00"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="15dp"
                android:layout_marginTop="19dp"
                android:textSize="18dp"
                android:text="打卡地点："
                android:textColor="#bfbfbf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/address"
                android:paddingLeft="7dp"
                android:paddingRight="10dp"
                android:layout_marginTop="19dp"
                android:textSize="18dp"
                android:text="12:00"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <EditText
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:hint="填写备注"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:gravity="left"
        android:id="@+id/edit_dialog_exittext"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:textSize="18dp"
        />

    <View
        android:id="@+id/edit_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dp"
        android:background="@color/black_light"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:visibility="gone"
            android:id="@+id/edit_dialog_leftbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_widget_md_dialog"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:minWidth="55dp"
            android:paddingBottom="6dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="6dp"
            android:text="取消"
            android:textColor="@color/black_light"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/edit_dialog_rightbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/selector_widget_md_dialog"
            android:clickable="true"
            android:gravity="center"
            android:text="提交"
            android:textColor="#3979fb"
            android:textSize="18dp"

            />


    </LinearLayout>


</LinearLayout>